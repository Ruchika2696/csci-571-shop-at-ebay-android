<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/truck"/>
        <TextView
            android:id="@+id/sold_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Sold By" />


    </LinearLayout>
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="3"
        >
        <TextView
            android:layout_column="0"
            android:layout_width="20dp"/>
        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Store Name"
            android:textSize="15dp"
            android:layout_row="0"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/store_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="0"
            android:layout_gravity="left"
            android:layout_column="2"

            />

        <TextView
            android:id="@+id/feedback_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Feedback Score"
            android:textSize="15dp"
            android:layout_row="1"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/feedback_score_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="1"
            android:layout_gravity="left"
            android:layout_column="2"

            />



        <TextView
            android:id="@+id/popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Popularity"
            android:textSize="15dp"
            android:layout_row="2"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <!--<TextView-->
            <!--android:id="@+id/popularity_value"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:textSize="15dp"-->
            <!--android:textColor="#C2C2C5"-->
            <!--android:layout_row="2"-->
            <!--android:layout_gravity="left"-->
            <!--android:layout_column="2"-->

            <!--/>-->
        <com.wssholmes.stark.circular_score.CircularScoreView
            android:id="@+id/two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:score="50"
            app:setBackgroundColor="#FFFF"
            app:setPrimaryColor="#FB5410"
            android:layout_row="2"
            android:layout_gravity="left"
            android:layout_column="2"/>

        <TextView
            android:id="@+id/feedback_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Feedback Star"
            android:textSize="15dp"
            android:layout_row="3"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/feedback_star_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="3"
            android:layout_gravity="left"
            android:layout_column="2"

            />


    </GridLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF00FF00" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ferry"/>
        <TextView
            android:id="@+id/shipping_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Shipping Info" />


    </LinearLayout>
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="3"
        >
        <TextView
            android:layout_column="0"
            android:layout_width="20dp"/>
        <TextView
            android:id="@+id/shipping_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shipping Cost"
            android:textSize="15dp"
            android:layout_row="0"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/shipping_cost_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="0"
            android:layout_gravity="left"
            android:layout_column="2"

            />

        <TextView
            android:id="@+id/global_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Global Shipping"
            android:textSize="15dp"
            android:layout_row="1"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/global_shipping_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="1"
            android:layout_gravity="left"
            android:layout_column="2"

            />

        <TextView
            android:id="@+id/handling_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Handling Time"
            android:textSize="15dp"
            android:layout_row="2"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/handling_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="2"
            android:layout_gravity="left"
            android:layout_column="2"

            />

        <TextView
            android:id="@+id/ship_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Condition"
            android:textSize="15dp"
            android:layout_row="3"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/ship_condition_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="3"
            android:layout_gravity="left"
            android:layout_column="2"

            />


    </GridLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF00FF00" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/return_truck"/>
        <TextView
            android:id="@+id/return_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Return Policy" />


    </LinearLayout>
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="3"
        >
        <TextView
            android:layout_column="0"
            android:layout_width="20dp"/>
        <TextView
            android:id="@+id/policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Policy"
            android:textSize="15dp"
            android:layout_row="0"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/policy_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="0"
            android:layout_gravity="left"
            android:layout_column="2"

            />

        <TextView
            android:id="@+id/returns_within"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Returns Within"
            android:textSize="15dp"
            android:layout_row="1"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/returns_within_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="1"
            android:layout_gravity="left"
            android:layout_column="2"

            />

        <TextView
            android:id="@+id/refund_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Refund Mode"
            android:textSize="15dp"
            android:layout_row="2"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/refund_mode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="2"
            android:layout_gravity="left"
            android:layout_column="2"

            />

        <TextView
            android:id="@+id/shipped_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shipped By"
            android:textSize="15dp"
            android:layout_row="3"
            android:layout_gravity="left"
            android:layout_column="1"

            />
        <TextView
            android:id="@+id/shipped_by_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:textColor="#C2C2C5"
            android:layout_row="3"
            android:layout_gravity="left"
            android:layout_column="2"

            />


    </GridLayout>





</LinearLayout>